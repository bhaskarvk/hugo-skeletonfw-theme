ul.tab-nav
  list-style: none
  border-bottom: 1px solid #bbb
  //border-bottom: 1px solid #f00
  padding-left: 5px
  li
    display: inline
    a.button
      border-bottom-left-radius: 0
      border-bottom-right-radius: 0
      margin-bottom: -1px
    a.active.button
      border-bottom: 1px solid #fff
      &:hover
        border-bottom: none

.tab-content
  .tab-pane
    display: none
  .tab-pane.active
    display: block

